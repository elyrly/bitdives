<!DOCTYPE html>
<html>
<head>
  <title>Bitdives</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>


<header>
  <div id="header-content">
      <% if current_user %>
        <div id="signed_in">
          <p>Welcome <strong><%= current_user.name %>!</strong></p>
          <%= link_to "Sign Out", signout_path, id: "sign_out" %>
        </div>
      <% else %>
        <ul id="link_list">
        <li><a href="/auth/twitter" name="twitter_link" >Twitter</a></li>
     <li><a href="/auth/facebook" name="fb_window" >Facebook</a></li>
        </ul>
      <% end %>
  </div>
</header>

<body>

<%= yield %>

</body>

</html>
