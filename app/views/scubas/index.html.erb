<br>
<div class="row">
  <div class="col-md-3"><p> Form </p>
<%= form_for @scuba do |x| %>
<%= x.hidden_field :user_id, :value => current_user.id %>
<div id="dive_num" ><%= x.text_field :dive_num, placeholder:"Dive_Num" %><img src="/assets/red_qmark.png" ></img></div>
<div id="date"><%= x.text_field :date, placeholder:"Date" %><img src="/assets/red_qmark.png" ></img></div>
<div id="location"><%= x.text_field :location, placeholder:"Location" %><img src="/assets/red_qmark.png" ></img></div>
<div id="time_in"><%= x.text_field :time_in, placeholder:"Time-In" %><img src="/assets/red_qmark.png" ></img></div>
<div id="time_out"><%= x.text_field :time_out, placeholder:"Time-Out" %><img src="/assets/red_qmark.png" ></img></div>
<div id="temperature"><%= x.text_field :temperature, placeholder:"Temperature" %><img src="/assets/red_qmark.png" ></img></div>
<div id="visability"><%= x.text_field :visability, placeholder:"Visability" %><img src="/assets/red_qmark.png" ></img></div>
<div id="environment"><%= x.text_field :environment, placeholder:"Environment" %><img src="/assets/red_qmark.png" ></img></div>
<div id="salt_fresh"><%= x.select :conditionsWater, ['Salt','Fresh'] %><img src="/assets/red_qmark.png" ></img></div>
<div id="boat_shore"><%= x.select :conditionsDive, ['Boat','Shore'] %><img src="/assets/red_qmark.png" ></img></div>
<div id="soft_wavy"><%= x.select :conditionsWaves, ['Soft','Wavy'] %><img src="/assets/red_qmark.png" ></img></div>
<div id="hood">Hood: <%= x.check_box :protectionHood %><img src="/assets/red_qmark.png" ></img></div>
<div id="gloves">Gloves: <%= x.check_box :protectionGloves %><img src="/assets/red_qmark.png" ></img></div>
<div id="boots">Boots: <%= x.check_box :protectionBoots %><img src="/assets/red_qmark.png" ></img></div>
<div id="vest">Vest: <%= x.check_box :protectionVest %><img src="/assets/red_qmark.png" ></img></div>
</div>

<div class="col-md-3">
  <br>
<div id="comments"><%= x.text_area :comments, placeholder:"Comments" , rows:"10" %><img src="/assets/red_qmark.png" ></img></div>
<%= x.submit "Submit"%>
<br>
<% end %>
<br>
<p><a class="btn btn-primary btn-lg" role="button" href="/scubas/show">See your old dives</a></p>
<br>
<p><a class="btn btn-primary btn-lg" role="button" href="/signout">Signout</a></p>
</div>
</div>


<video video id="video_background" preload="auto" autoplay="true" loop="loop" muted="muted" volume="0">
  <source src="/assets/splash.mp4" type="video/mp4">
  Your browser does not support the video tag.
</video>
